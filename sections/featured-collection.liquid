<div class="containter mx-auto ">
  <h1 class="bold text-3xl text-center	">Featured Product</h1>
  {% assign collection = section.settings.collection %}

  <div class="flex items-center">
    {% for product in collection.products %}
      <a href="{{ product.url | within:collection }}">
        <div class="w-[400px] h-[300px] border p-24  ">
          <img src="{{ product.featured_image | image_url }}" loading="lazy">
          <h1 class="bold tx-xl">{{ product.title }}</h1>
          <p>{{ product.description }}</p>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name":"Featurere Collection",
  "settings":[
    {"type":"collection",
    "id":"collection",
      "label":"Collection"

}
  ],
  "presets":[
    {
      "name":"Featured Collection",
      "category":"Collection"
    }
  ]
}
{% endschema %}
